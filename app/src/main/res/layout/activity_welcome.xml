<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_primary"
    android:animateLayoutChanges="true">

    <!-- Success Animation Container -->
    <LinearLayout
        android:id="@+id/successContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Success Icon with Circle Background -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/circle_background"
            android:elevation="12dp">
            
            <ImageView
                android:id="@+id/imgSuccess"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_verified"
                android:tint="@color/white"
                android:contentDescription="Success" />
        </FrameLayout>

        <!-- Welcome Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, User!"
            android:textSize="20sp"
            android:textColor="#E0E7FF"
            android:layout_marginTop="8dp"
            android:textAlignment="center" />

        <!-- Success Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're all set to discover amazing events"
            android:textSize="16sp"
            android:textColor="#C7D2FE"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:alpha="0.9" />

        <!-- Action Buttons Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Continue Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnContinue"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:text="Continue to App"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    app:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    app:icon="@drawable/ic_celebration"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="8dp"
                    android:text="Logout"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorOnSurfaceVariant" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Decorative Elements -->
    <View
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circle_background"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-50dp" />

    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_background"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-40dp"
        android:layout_marginStart="-40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>